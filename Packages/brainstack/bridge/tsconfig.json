{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "paths": {
      "common/*": [
        "../typings/common/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
